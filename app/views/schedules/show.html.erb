<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start.strftime('%Y年%m月%d日') %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @schedule.updated_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <% if @schedule.allday ==true %>
    <td>○</td>
    <% else @schedule.allday == false %>
    <td></td>
    <% end %>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to"スケジュール一覧に戻る", :schedules %></li>
    <li><%= link_to"スケジュールを編集する", [:edit, @schedule ]%></li>
    <li><%= link_to"スケジュールを削除する", @schedule, method: :delete, data: {confirm: "本当に削除しますか？" }%></li>
  </ul>
</div>

